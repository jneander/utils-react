{
  "name": "@jneander/utils-react",
  "version": "1.3.1",
  "description": "React Utilities",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:es",
    "build:cjs": "CJS=true babel --config-file ./babel.config.build.js --out-dir ./lib ./src",
    "build:es": "babel --config-file ./babel.config.build.js --out-dir ./es ./src",
    "clean": "rimraf es/ lib/",
    "lint:eslint": "eslint ./src/**/*.js",
    "lint:eslint:fix": "eslint --fix ./src/**/*.js",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prebuild": "npm run clean",
    "test": "./scripts/test.js",
    "test:head": "npm run test --no-headless",
    "test:head:watch": "npm run test --no-headless --watch",
    "test:watch": "npm run test --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jneander/utils-react"
  },
  "keywords": [
    "react",
    "utils"
  ],
  "author": "Jeremy Neander <jeremy.neander@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jneander/utils-react/issues"
  },
  "dependencies": {
    "@popperjs/core": "^2.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@babel/runtime-corejs3": "^7.12.13",
    "@jneander/dev-utils-node": "^1.0.1",
    "@jneander/prettier-config": "^1.0.0",
    "@jneander/spec-utils-dom": "^1.1.2",
    "@jneander/spec-utils-react": "^1.0.1",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.0",
    "core-js": "^3.8.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "karma": "^6.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^5.0.0",
    "mocha": "^8.2.1",
    "prettier": "^2.8.1",
    "process": "^0.11.10",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-test-renderer": "^17.0.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4",
    "util": "^0.12.3",
    "webpack": "^5.21.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "prettier": "@jneander/prettier-config"
}
